%% Codigo para calculo de ruta

%caso base

ir_hacia(X, X, [X]):-
    writeln("Ya estï¿½s en el lugar").

ir_hacia(X, Y, Route):-
    lugar(X),
    lugar(Y),
    ir_hacia(X, Y, [X], Route).

ir_hacia(X, _, _):-
    \+ lugar(X),
    writeln("Los lugares no existen :("),
    fail.

ir_hacia(_, Y, _):-
    \+ lugar(Y),
    writeln("Los lugares no existen :("),
    fail.

ir_hacia(X, Y, Acc, Route):-
    abolish(eslabon, 1),
    assert(eslabon(X)),
    ir_hacia2(X, Y, Acc, Route).

ir_hacia2(X, Y, Acc, Route):-
    conecta(X, Y),
    reverse([Y|Acc], Route),
    assert(eslabon(Y)),
    !.

ir_hacia2(X, _, _, _):-
    conecta(X, Z),
    eslabon(Z),
    fail.

ir_hacia2(X, Y, Acc, Route):-
    conecta(X, Z),
    not(eslabon(Z)),
    assert(eslabon(Z)),
    ir_hacia2(Z, Y, [Z|Acc], Route),
    !.

calle_coordenada_x(Calle,  X, _) :-
    calles(Calle, X, _).

calle_coordenada_y(Calle, _, Y) :-
    calles(Calle, _, Y).

calle_coordenadas(Calle, List) :-
    calle_coordenada_x(Calle, X, _),
    calle_coordenada_y(Calle, _, Y),
    List = X, Y.

